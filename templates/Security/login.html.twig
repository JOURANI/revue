
{% block title %} <title> Connexion</title> {% endblock %}

{% block stylesheets %}
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.5/css/select2.min.css">
      <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
      <link href="{{ asset('build/app.css') }}" rel="stylesheet" />
{%  endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <form class="box" action="{{ path('login') }}" method="post">
                        <h1>Login</h1>
                        {% if error %}
                            <div class="alert text-muted alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        {% for message in app.flashes('errorlogin') %}
                            <div class="alert text-muted alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}

                        <p class="text-muted"> Please enter your login and password!</p>
                            <input type="text" name="_username" placeholder="email">
                            <input type="password" name="_password" placeholder="Password">
                            <a class="forgot text-muted" href="{{ path('register') }}">Create account</a> <br>
                            <a class="forgot text-muted" href="">Forgot password?</a>

                            <input type="submit" value="Login" href="#">
                        <div class="col-md-12">
                            <ul class="social-network social-circle">
                                <li><a href="#" class="icoFacebook" title="Facebook"><i class="fab fa-facebook-f"></i></a></li>
                                <li><a href="#" class="icoTwitter" title="Twitter"><i class="fab fa-twitter"></i></a></li>
                                <li><a href="#" class="icoGoogle" title="Google +"><i class="fab fa-google-plus"></i></a></li>
                            </ul>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}